<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:label="@string/app_name"
        android:theme="@style/Theme.App.Starting"
        android:enableOnBackInvokedCallback="true"
        tools:ignore="MissingApplicationIcon,UnusedAttribute">

        <activity
            android:name=".MainActivity" />

        <activity-alias
            android:name=".DEFAULT"
            android:targetActivity=".MainActivity"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:roundIcon="@drawable/ic_launcher"
            android:enabled="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity-alias>

        <activity-alias
            android:name=".PREMIUM"
            android:targetActivity=".MainActivity"
            android:exported="true"
            android:icon="@drawable/ic_launcher_premium"
            android:roundIcon="@drawable/ic_launcher_premium"
            android:enabled="false">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity-alias>

        <activity-alias
            android:name=".XMAS"
            android:targetActivity=".MainActivity"
            android:exported="true"
            android:icon="@drawable/ic_launcher_xmas"
            android:roundIcon="@drawable/ic_launcher_xmas"
            android:enabled="false">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity-alias>

    </application>

</manifest>